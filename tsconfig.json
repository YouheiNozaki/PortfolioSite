{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["ES2020"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["src/gatsby-node/**/*ache", "node_modules"],
  "include": ["./src/**/*"]
}
